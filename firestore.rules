rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Publicly readable job listings; writes restricted to backend/admins.
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Publicly readable company profiles; writes restricted to backend/admins.
    match /companys/{slug} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Per-user data (e.g., saved/pinned) scoped to the authenticated user.
    match /users/{uid}/{coll=**}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Deny everything else by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
